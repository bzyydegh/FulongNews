<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    <!--上拉加载更多 RecyclerView 底部-->
    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/home_item_pb_more"
        android:layout_width="45dp"
        android:layout_height="45dp"
        wheel:matProg_barColor="@color/progressBar"
        wheel:matProg_progressIndeterminate="true" />
    <TextView
        android:id="@+id/home_item_tv_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_activity_loading"
        android:textSize="20sp"
        android:textColor="@color/progressBar"
        android:layout_marginStart="3dp"
        android:layout_toEndOf="@id/home_item_pb_more"
        android:layout_centerVertical="true"/>

</RelativeLayout>