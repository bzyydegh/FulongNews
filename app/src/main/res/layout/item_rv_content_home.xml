<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardElevation="7dp"
    app:contentPadding="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/home_item_iv_picture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@null"
            android:layout_marginEnd="7dp"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/home_item_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/home_rv_title"
            android:maxLines="2"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/home_item_iv_picture"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/home_item_tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/home_rv_date"
            android:layout_below="@id/home_item_tv_title"
            android:layout_toEndOf="@id/home_item_iv_picture"
            android:gravity="start"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>